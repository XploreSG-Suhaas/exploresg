# Development Environment Configuration
# Shared configuration values for the XploreSG development environment

# Application settings
APP_NAME=xploresg
APP_VERSION=1.0.0
NODE_ENV=development

# Database configuration
POSTGRES_DB=xploresg_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123

# Redis configuration (when enabled)
REDIS_PASSWORD=redis123

# JWT configuration
JWT_SECRET=your-super-secret-jwt-key-for-development-only
JWT_EXPIRES_IN=24h

# API configuration
API_BASE_URL=http://api.xploresg.local
USER_SERVICE_PORT=3001
FRONTEND_PORT=80

# Development specific settings
LOG_LEVEL=debug
ENABLE_CORS=true
ENABLE_SWAGGER=true

# Resource limits for local development
POSTGRES_MEMORY_REQUEST=256Mi
POSTGRES_MEMORY_LIMIT=512Mi
POSTGRES_CPU_REQUEST=250m
POSTGRES_CPU_LIMIT=500m

USER_SERVICE_MEMORY_REQUEST=256Mi
USER_SERVICE_MEMORY_LIMIT=512Mi
USER_SERVICE_CPU_REQUEST=200m
USER_SERVICE_CPU_LIMIT=500m

FRONTEND_MEMORY_REQUEST=128Mi
FRONTEND_MEMORY_LIMIT=256Mi
FRONTEND_CPU_REQUEST=100m
FRONTEND_CPU_LIMIT=200m